                        <application>
                            <name>Prometheus</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>prometheus_target_scrape_pool_targets</name>
                    <key>prometheus_target_scrape_pool_targets</key>
                    <delay>2m</delay>
                    <description>Current number of targets in this scrape pool.</description>
